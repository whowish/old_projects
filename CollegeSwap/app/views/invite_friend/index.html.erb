<span id="invite_friend_dialog" style="width:740px;overflow:hidden;">
	<fb:serverfbml width="740" style="width:740px;"> 
		<script type="text/fbml">
		    <fb:fbml> 
		    	<fb:request-form
		    		action="http://<%=DOMAIN_NAME%>"
		    		method="POST"
		    		invite="true"
		    		type="CollegeSwap"
					style="width:740px;"
		    		content="Check out CollegeSwap! I'm using it now and its pretty cool. You can swap with other students for stuff without paying anything: iPhones, futons, refrigerators, rides home, tutors, you name it!"> 
		    		<fb:multi-friend-selector
		    			showborder="true"
		    			actiontext="Invite your friends to join CollegeSwap"
		    			exclude_ids=""
		    			rows="3"
						cols="5"
						bypass="cancel"
		    		/> 
		    	</fb:request-form> 
		    </fb:fbml>
		</script> 
	</fb:serverfbml>
</span>
<div id="fb-root">
</div>

<script src="http://static.ak.fbcdn.net/connect/en_US/core.debug.js"></script>
<script language="javascript">
	 FB.init({
	    appId  : '<%=APP_ID%>',
	    status : true, // check login status
	    cookie : true, // enable cookies to allow the server to access the session
	    xfbml  : true  // parse XFBML
	  });
	
	FB.Canvas.setAutoResize(100);
</script>


