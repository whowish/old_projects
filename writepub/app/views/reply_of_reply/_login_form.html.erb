<span class="loginWarning">
	<h2>
		<%=word_for(:you_not_register)%> <br />
		<em>
			<%=word_for(:please_register)%>
		</em>
	</h2>
	<span class="newtopic_form margin-left-1">
		<span class="form_unit">
			<span class="span-48">
				<a id="reply_of_reply_facebook_login_button" href="https://www.facebook.com/dialog/oauth?client_id=<%=APP_ID%>&redirect_uri=<%=CGI.escape("http://#{DOMAIN_NAME}/facebook_registration/receiver/reply/#{kratoo.id}")%>" target="_facebook_connect_<%=rand()%>" style="margin-top:10px;cursor:pointer;display:block;">
			        <img src="http://static.ak.fbcdn.net/images/fbconnect/login-buttons/connect_light_medium_short.gif"  alt="Login with Facebook"/>
			    </a>	
			</span>
			<span class="textbox_explane">
				<p class="tip">
					<%=word_for(:register_with_facebook)%>
				</p>
			</span>
		</span>
		<span class="form_unit">
			<span class="span-48">
				<%=word_for(:register_with_us)%>
			</span>
		</span>
		<span class="form_unit">
			<span class="span-48">
				<input id="reply_of_reply_login_username" type="text" class="textbox_input span-46" placeholder="<%=word_for_attr :username%>">
			</span>
			<span class="textbox_explane">
			</span>
		</span>
		<span class="form_unit">
			<span class="span-48">
				<input id="reply_of_reply_login_password" type="password" class="textbox_input span-46" placeholder="<%=word_for_attr :password%>">
			</span>
			<span class="textbox_explane">

			</span>
		</span>
		<span class="form_unit">
			<span class="span-48">
				<input id="reply_of_reply_login_remember_me" type="checkbox"> 
				<%=word_for :remember_me%>
			</span>
		</span>
		<span class="form_unit">
			<span class="span-48">
				<a href="/member/forget_password_form" class="font14">
					<%=word_for(:forget_password)%>
				</a>
			</span>
		</span>
		<span class="form_unit">
			<span class="span-48">
				<span id="reply_of_reply_login_button" class="font26 green_button" onclick="reply_of_reply_handler.login(this,'<%=kratoo.id%>');">
					<%=word_for(:login)%>
				</span>
			</span>
			<span id="reply_of_reply_login_error_panel" class="textbox_explane">
							
			</span>
		</span>					
	</span>
</span>

<script language="javascript">
	var reply_of_reply_login_validator = new validator("reply_of_reply_login_error_panel");
	reply_of_reply_login_validator.register_validation("username","reply_of_reply_login_username",null,
										null,
										[{
											f: validator_helper.presence,
											m: "<%=global_word_for('login','username_presence')%>"
										}]);
										
	reply_of_reply_login_validator.register_validation("password","reply_of_reply_login_password",null,
										null,
										[{
											f: validator_helper.presence,
											m: "<%=global_word_for('login','password_presence')%>"
										}]);
</script>