<%
	agrees = entity.agrees if !agrees
	disagrees = entity.disagrees if !disagrees
%>
<span id="kratoo_agree_unit">
	<%
		if !$member.is_guest
	%>
		<span class="love_button">
			<span class="heartIcon" id="kratoo_agree_button" onclick="kratoo_handler.agree(this,'<%=Kratoo::AGREEABLE_TYPE_AGREE%>','<%=entity.id%>');return false;">
			</span>
			<a href="#" id="kratoo_agree_count_panel" onclick="kratoo_agree_handler.show_dialog('<%=entity.id%>','<%=Kratoo::AGREEABLE_TYPE_AGREE%>');return  false;">
				 <%==word_for :agree_count,:number=>agrees%>
			</a>	
		</span>
		
	<%
		end
	%>
	
	<%
		if !$member.is_guest
	%>
		<span class="hate_button selected">
			<span class="footIcon" id="kratoo_undisagree_button" onclick="kratoo_handler.agree(this,'','<%=entity.id%>');return false;">
			</span>
			<a href="#" id="kratoo_disagree_count_panel" onclick="kratoo_agree_handler.show_dialog('<%=entity.id%>','<%=Kratoo::AGREEABLE_TYPE_DISAGREE%>');return  false;">
				 <%==word_for :disagree_count,:number=>disagrees%>
			</a>
		</span>
	<%
		end
	%>
	
</span>
