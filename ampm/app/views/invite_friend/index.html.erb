<span id="invite_friend_dialog" style="margin:10px 10px 10px 10px;width:550px;overflow:hidden;">
	<fb:serverfbml width="550" style="width:550px;"> 
		<script type="text/fbml">
		    <fb:fbml> 
		    	<fb:request-form
		    		action="http://apps.facebook.com/<%=FACEBOOK_APP_NAME%>/"
		    		method="POST"
		    		invite="true"
		    		type="<%=FACEBOOK_APP_NAME%>"
					style="width:550px;"
		    		content="<%= word_for :invite_content%>"> 
		    		<fb:multi-friend-selector
		    			showborder="true"
		    			actiontext="<%=word_for :invite_action_text%>"
		    			exclude_ids=""
		    			rows="3"
						cols="3"
						bypass="cancel"
		    		/> 
		    	</fb:request-form> 
		    </fb:fbml>
		</script> 
	</fb:serverfbml>
</span>

<script language="javascript">
	 $(function () {
	 	FB.XFBML.parse();

	 })
</script>


