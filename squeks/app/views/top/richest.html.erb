<%
	@users = Member.all(:order=>"credits DESC",:limit=>50)
%>
<span class="span-98 margin-top-2">
	<span class="span-98 height20">
		<span class="float-left height20">
			<span class="comment_filter font12">
				<%=render :partial=>"top/menu"%>
			</span>
		</span>
	</span>
	<span class="span-98 margin-top-1 clearfix">
		<%
			packages = [{:bg_color=>"huneysuckle_pink_bg",:span=>92},
						{:bg_color=>"pink_to_blue01",:span=>87},
						{:bg_color=>"pink_to_blue02",:span=>82},
						{:bg_color=>"pink_to_blue03",:span=>77},
						{:bg_color=>"pink_to_blue04",:span=>72},
						{:bg_color=>"pink_to_blue05",:span=>67},
						{:bg_color=>"pink_to_blue06",:span=>62},
						{:bg_color=>"pink_to_blue07",:span=>57},
						{:bg_color=>"pink_to_blue08",:span=>52},
						{:bg_color=>"squeks_blue_bg",:span=>47},
						{:bg_color=>"medium_gray_bg",:span=>47}]
			run_number = 0
			@users.each do |user|
				run_number += 1

				package_number = run_number-1

				if run_number >= packages.length
					package_number = packages.length-1
				end 
		%>
			<span class="span-98 margin-top-1 clearfix">
				<span class="span-5 height-5 display_block">
					<a href="/profile?user_id=<%=user.facebook_id%>">
						<img src="<%=user.profile_picture_url%>" alt=""  />
					</a>
				</span>
				<span class="span-<%=packages[package_number][:span]%> margin-left-1 height-5 <%=packages[package_number][:bg_color]%>">
					<span class="span-5 height-5 line_height50px align_center font30 white text_shadow_black bold_font display_block">
						<%=run_number%>.
					</span>
					<span class="span-<%=packages[package_number][:span]-5-1%> margin-left-1">
						<span class="float-left line_height50px">
							<span class="squeks_coin_value margin-top-15px">
							</span>
							<span class="font16 white bold_font">
								$<%=number_with_delimiter(user.credits)%>
							</span>
						</span>
						<span class="float-right margin-right-1 line_height50px">
							<a href="/profile?user_id=<%=user.facebook_id%>" class="font16 white">
								<%=user.name%>
							</a>
						</span>
					</span>
				</span>
			</span>
		<%
			end
		%>
	</span>
</span>